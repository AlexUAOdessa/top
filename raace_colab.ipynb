# ==========================================
# NEXUS INNOVATE: PRO RACE CHART GENERATOR
# Ориентация: 9:16 / 16:9 | Режимы: SlowMo или Обычный
# ==========================================

import pandas as pd
import matplotlib.pyplot as plt
import matplotlib.animation as animation
from matplotlib.ticker import StrMethodFormatter
import numpy as np
import subprocess
import os
import re
from tqdm import tqdm
from google.colab import files

# --- 1. НАСТРОЙКИ (Изменяйте здесь) ---
SETTINGS = {
    'FILENAME': 'car_sales.csv',
    'ORIENTATION': '9:16',          # '9:16' (Shorts) или '16:9' (YouTube)
    
    # --- НАСТРОЙКИ СКОРОСТИ ---
    'APPLY_SLOWMO': True,           # True - включить плавное замедление (FFmpeg), False - обычная скорость
    'SPEED_FACTOR': 0.15,           # Только если APPLY_SLOWMO = True (0.15 - очень медленно)
    
    'USE_GPU': True,                # Использовать T4 GPU для рендеринга
    'VIDEO_FPS': 60,                # Базовая частота кадров
    'DPI': 144,                     # Качество картинки
    'FRAMES_PER_YEAR': 15,          # Количество шагов анимации на 1 год
    'EXTRA_FINAL_PAUSE': 4          # Сколько секунд держать финальный 2026 год
}

plt.rcParams['font.family'] = 'DejaVu Sans'

COLORS = {
    'Toyota': '#EB0A1E', 'VW Group': '#001E50', 'GM': '#294F94',
    'Ford': '#003478', 'Hyundai-Kia': '#002C5F', 'BYD': '#00A3A5',
    'Tesla': '#E82127', 'Stellantis': '#004780', 'Honda': '#CC0000',
    'Nissan': '#C3002F'
}

# --- 2. ПОДГОТОВКА ДАННЫХ ---
def prepare_data():
    if not os.path.exists(SETTINGS['FILENAME']):
        raise FileNotFoundError(f"Загрузите файл {SETTINGS['FILENAME']}!")
    
    df = pd.read_csv(SETTINGS['FILENAME']).set_index('Year')
    years_expanded = np.linspace(df.index.min(), df.index.max(), 
                                 num=int((df.index.max() - df.index.min()) * SETTINGS['FRAMES_PER_YEAR']))
    df_interp = df.reindex(df.index.union(years_expanded)).interpolate(method='linear').reindex(years_expanded)
    return df_interp, years_expanded

# --- 3. ГРАФИКА ---
if SETTINGS['ORIENTATION'] == '9:16':
    fig, ax = plt.subplots(figsize=(7, 12.4))
    TITLE_SIZE, LABEL_SIZE, YEAR_SIZE = 18, 12, 65
else:
    fig, ax = plt.subplots(figsize=(12.5, 7))
    TITLE_SIZE, LABEL_SIZE, YEAR_SIZE = 15, 11, 55

def draw_barchart(current_year):
    d = df.loc[current_year].sort_values(ascending=True).tail(10)
    ax.clear()
    y_pos = np.arange(len(d))
    ax.barh(y_pos, d.values, color=[COLORS.get(x, '#adb5bd') for x in d.index], height=0.8)
    ax.set_xlim(0, 13)
    ax.xaxis.set_major_formatter(StrMethodFormatter('{x:,.0f}M'))
    ax.xaxis.set_ticks_position('top')
    ax.tick_params(axis='x', colors='#777777', labelsize=LABEL_SIZE-2)
    ax.set_yticks(y_pos)
    ax.set_yticklabels(d.index, size=LABEL_SIZE, fontweight='bold')
    
    for i, (value, name) in enumerate(zip(d.values, d.index)):
        ax.text(value + 0.1, i, f'{value:,.1f}M', ha='left', va='center', size=LABEL_SIZE-1, fontweight='bold')

    y_pos_year = 0.15 if SETTINGS['ORIENTATION'] == '9:16' else 0.2
    ax.text(0.95, y_pos_year, int(current_year), transform=ax.transAxes, 
            color='#00CC00', size=YEAR_SIZE, ha='right', weight=800, alpha=0.8)

    for spine in ax.spines.values(): spine.set_visible(False)
    plt.title('Nexus Innovate: Car Sales Evolution', size=TITLE_SIZE, loc='left', pad=20)
    plt.tight_layout()

# --- 4. ОБРАБОТКА (FFMPEG) ---
def run_processing(input_file, output_file, thumb_file):
    codec = 'h264_nvenc' if SETTINGS['USE_GPU'] else 'libx264'
    
    if SETTINGS['APPLY_SLOWMO']:
        # Режим замедления с интерполяцией
        print(f"\n--- РЕЖИМ: ЗАМЕДЛЕНИЕ (x{SETTINGS['SPEED_FACTOR']}) ---")
        pts_multiplier = 1 / SETTINGS['SPEED_FACTOR']
        filter_str = f"setpts={pts_multiplier}*PTS,minterpolate=mi_mode=mci:mc_mode=aobmc:vsbmc=1"
        total_dur = (len(extended_frames) / SETTINGS['VIDEO_FPS']) * pts_multiplier
    else:
        # Режим обычной скорости
        print("\n--- РЕЖИМ: ОБЫЧНАЯ СКОРОСТЬ ---")
        filter_str = "null" # Никаких изменений
        total_dur = len(extended_frames) / SETTINGS['VIDEO_FPS']

    cmd = [
        'ffmpeg', '-y', '-i', input_file,
        '-vf', filter_str,
        '-c:v', codec, '-preset', 'p4' if SETTINGS['USE_GPU'] else 'medium',
        '-b:v', '6M', '-pix_fmt', 'yuv420p', output_file
    ]

    process = subprocess.Popen(cmd, stderr=subprocess.PIPE, universal_newlines=True)
    pbar = tqdm(total=100, desc="Рендеринг", unit="%")
    time_pattern = re.compile(r"time=(\d+):(\d+):(\d+\.\d+)")

    while True:
        line = process.stderr.readline()
        if not line and process.poll() is not None: break
        match = time_pattern.search(line)
        if match:
            h, m, s = map(float, match.groups())
            curr = h * 3600 + m * 60 + s
            pbar.n = min(99.9, round((curr / total_dur) * 100, 1))
            pbar.refresh()
    
    pbar.n = 100; pbar.close(); process.wait()
    
    # Снимок для обложки (берем последний кадр)
    subprocess.run(['ffmpeg', '-y', '-sseof', '-1', '-i', output_file, '-update', '1', '-q:v', '2', thumb_file], 
                   stdout=subprocess.DEVNULL, stderr=subprocess.DEVNULL)

# --- 5. ЗАПУСК ---
try:
    df, frames = prepare_data()
    
    # Добавляем паузу на 2026 году
    extra = [frames[-1]] * (SETTINGS['VIDEO_FPS'] * SETTINGS['EXTRA_FINAL_PAUSE'])
    extended_frames = np.concatenate([frames, extra])

    temp_raw = 'temp_raw.mp4'
    final_v = f"nexus_race_{SETTINGS['ORIENTATION'].replace(':','x')}.mp4"
    final_t = 'thumbnail.jpg'

    print("Шаг 1: Анимация Matplotlib...")
    anim = animation.FuncAnimation(fig, draw_barchart, frames=extended_frames, interval=1000/SETTINGS['VIDEO_FPS'])
    anim.save(temp_raw, writer='ffmpeg', fps=SETTINGS['VIDEO_FPS'], dpi=SETTINGS['DPI'])

    print("Шаг 2: Финальная сборка...")
    run_processing(temp_raw, final_v, final_t)

    print("\n--- ГОТОВО ---")
    files.download(final_v)
    files.download(final_t)

except Exception as e:
    print(f"\n❌ ОШИБКА: {e}")